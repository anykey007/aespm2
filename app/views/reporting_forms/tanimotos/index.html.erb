<h1>Запитання анкети</h1>

<%= link_to 'Нове запитання', new_reporting_forms_tanimoto_path %>

<table id="line_items">
  <tr class="<%= cycle :odd, :even %>">
    <th>N%</th>
    <th>Запитання</th>
    <th>Відповідь 1</th>
    <th>Відповідь 2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td style="width:20px;"><%= line.id %></td>
    <td><%= line.question %></td>
    <td><%= line.answer1 %></td>
    <td><%= line.answer2 %></td>
    <td><%= link_to 'Перегляд', line %></td>
    <td><%= link_to 'Редагувати', edit_reporting_forms_tanimoto_path(line) %></td>
    <td><%= link_to 'Видалити', line, confirm: 'Ви впевнені?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Нове запитання', new_reporting_forms_tanimoto_path %>
